<h2>New Specsheet</h2>

<%= form_for [@specsheet] do |f| %>
	<% if @specsheet.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@specsheet.errors.count, "error") %> prohibited this reservation from being saved:</h2>

        <ul>
        <% @specsheet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

	<div class="field">
		<%= f.label :name %> <br />
		<%= f.text_field :name %>
	</div>

	<div class="field">
		<%= label :bowls, 'Number of Bowls'%> <br />
		<%= radio_button_tag(:bowls, 1, params[:bowls]) %> 
		<%= label_tag :bowls, 'Single Bowl', :class => 'specsheet' %> <br />
		<%= radio_button_tag(:bowls, 2, params[:bowls]) %>
		<%= label_tag :bowls, 'Double Bowl', :class => 'specsheet' %> <br />
		<%= radio_button_tag(:bowls, 3, params[:bowls]) %> 
		<%= label_tag :bowls, 'Triple Bowl', :class => 'specsheet' %> <br />
		
	</div>

	<div class="actions"><%= f.submit %></div>

<% end %>

