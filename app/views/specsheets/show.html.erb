<!-- <p>Number of Bowls: <%= @specsheet.number_of_bowls %></p> -->

<% @bowlcount = 0 %>


<div class = "row" id = "comments-frame">
	<fieldset>
		<legend><%= "Specsheet: #{@specsheet.name}" %></legend>
			<row>
				<h4>Bowls</h4>
				<div class="large-6 columns">
					<%= @specsheet.bowls.each do |bowl| %>
					<h3><%="Bowl" %></h3>
						<%= "Left to right:" %><br />
						<%= "Front to back:" %><br />
						<%= "Depth:" %><br />
						<%= "Bottom grid:" %><br />
						<%= "Colander:" %><br />
				</div>
				<div class="large-6 columns">
					<h3><%="#{@bowlcount + 1}" %></h3>
						<%= "#{@bowl.left_right}" %><br />
						<%= "#{@bowl.front_back}" %><br />
						<%= "#{@bowl.depth}" %><br />
						<%= "#{@bowl.bottom_grid}" %><br />
						<%= "#{@bowl.colander}" %><br />
					<% end %>
				</div>
				<br>

					<h4>Configuration</h4>
				<div class ="large-6 columns">
					<%= "Installation type:" %><br />
					<%= "Corner radius:" %><br />
					<%= "Drain location:" %><br />
					<%= "Drain size:" %><br />
					<%= "Divider:" %>
				</div>
				<div class ="large-6 columns">
					<%= "#{@specsheet.installation}" %><br />
					<%= "#{@specsheet.corner_radius}" %><br />
					<%= "#{@specsheet.drain_location}" %><br />
					<%= "#{@specsheet.drain_size}" %><br />
					<%= "#{@specsheet.divider}" %>
				</div>

			</row>

	</fieldset>
</div>






<% if current_user %>
<div class="large-12 columns" id ="button">

	<%= form_for @specsheet do |f| %>

	<%= f.hidden_field :id %>	

		<%= f.submit "Save", :class => "button" %>

	<% end %>

</div>
<% else %>
  <p>If you would like to save this specsheet to a personal list <%= link_to "sign up now", new_user_path %>.</p>
 <p>Otherwise, <%= link_to "log in", new_session_path %> to save your specsheet.</p> 
<% end %>